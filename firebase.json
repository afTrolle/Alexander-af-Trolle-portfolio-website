{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/src/:file*",
        "destination": "/src/:file"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
